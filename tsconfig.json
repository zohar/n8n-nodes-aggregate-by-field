{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"lib": ["es2019"],
		"declaration": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["nodes/**/*.ts"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
}
